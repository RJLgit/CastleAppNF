<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <TextView
        android:id="@+id/castleNameTextView"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Castle name 1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distanceLabelTextView"
        android:layout_width="106dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:text="Distance away:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/castleNameTextView" />

    <TextView
        android:id="@+id/distanceValueTextView"
        android:layout_width="63dp"
        android:layout_height="29dp"
        android:layout_marginStart="4dp"
        android:text="40"
        app:layout_constraintStart_toEndOf="@+id/distanceLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/castleNameTextView" />

    <ImageView
        android:id="@+id/castleRvImageView"
        android:layout_width="197dp"
        android:layout_height="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/castleNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/warwick_castle" />
</androidx.constraintlayout.widget.ConstraintLayout>