<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<ListPreference
    android:key="distance_preference"
    android:title="@string/settings_distance_title"
    android:entries="@array/distance_array"
    android:entryValues="@array/distance_array"
    android:summary="%s"
    android:defaultValue="Miles"
    />

    <ListPreference
        android:key="sort_preference"
        android:title="@string/settings_sort_title"
        android:entries="@array/sort_array"
        android:entryValues="@array/sort_array"
        android:summary="%s"
        android:defaultValue="A-Z"
        />

    <ListPreference
        android:key="filter_preference"
        android:title="@string/settings_filter_title"
        android:entries="@array/filter_array"
        android:entryValues="@array/filter_array"
        android:summary="%s"
        android:defaultValue="None"
        />
</PreferenceScreen>